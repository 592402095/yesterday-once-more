page {
  height: 100%;
  display: flex;
}
.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: url(https://s2.ax1x.com/2019/06/13/Vh7SaD.gif)no-repeat;
  background-size: cover;
  position: absolute;
  width: 100%;
  height: 100%;
}

.header {
  padding: 100px 20px 20px 20px;
}
.logo {}
.logo > image {
  width: 60px;
  height: 60px;
  border-radius: 10px;
}
.bigtitle {}
.bigtitle > text {
  font-size: 32px;
  color: #E6E61A;
  font-weight: 500;
}

.smalltitle {}
.smalltitle > text {
  font-size: 24px;
  color: #fff;
  font-weight: 400;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}
.loading > image {
  width: 25px;
  height: 25px;
  animation: loading 800ms infinite ease;
}
/*加载动画  */
@keyframes loading {
  0% {
    transform: rotate(360deg);
  }
  100% {
    transform: rotate(0deg);
  }
}

.authorization {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.input-cell {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.input-cell > image {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}
.input-cell > input {
  border-bottom: 1px solid #EEE;
  padding: 5px;
  font-weight: 300;
  color: #333;
}
.input-placeholder {
  font-size: 14px;
  color: #999;
  font-weight: 200;
}

.authorization-btn {
  width: 200px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: linear-gradient(135deg, rgb(81, 236, 236) 0%, #0e3a27 100%);
  border-radius: 5px;
  color: #fFF;
}

.hint{
    width: 200px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background:linear-gradient(135deg, rgb(12, 248, 248) 0%, #fbff00 100%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}

.reg-box {

}
.reg-box > text {
  font-size: 12px;
  color: #AAA;
  font-weight: 200;
}

.welcome {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.welcome > image {
  width: 100px;
  height: 100px;
  background-color: #EEE;
  border-radius: 50px;
  border: 1px solid #DDD;
}
.welcome > text {
  font-size: 16px;
  color: #333;
  font-weight: 200;
  margin: 10px;
}
.welcome_msg {
  font-size: 14px;
  color: #666;
  font-weight: 100;
}