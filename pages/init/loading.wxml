<include src="/libs/weToast/weToast.wxml" />

<view class="container">
  <!--标题  -->
  <view class='header'>
    <!--the first row  -->
    <view class='smalltitle'>
      <text>欢迎使用</text>
    </view>
    <!--the second  -->
    <view class='bigtitle'>
      <text>昨日重现</text>
    </view>
    <!--the third -->
    <view class='smalltitle'>
      <text>小程序</text>
    </view>
  </view>

  <!--内容  -->
    <!--加载中  -->
    <view class='loading' wx:if="{{LOADING}}">
      <image src='/assets/loading.svg'></image>
    </view>
    <view wx:else style='flex:1;display:flex;'>
      <!--登陆框  -->
      <view class='authorization'>
        <button class='authorization-btn' wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">授权登录</button>
      <block wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </block>
      </view>

      <!--欢迎  -->
    </view>
</view>