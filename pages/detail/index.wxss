@import "../../libs/wxParse/wxParse.wxss";

page {
  height: 100%;
}
.background {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
  background-image: linear-gradient(135deg, #FFFFFF 0%, #DDDDDD 100%);
}

.navigator {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border-bottom: 1px solid #FFF; */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}
.navigator > .back {
  padding: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navigator > .back > image {
  width: 20px;
  height: 20px;
  color: red;
}
.navigator > .title {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 40px;
}
.navigator > .title > text {
  font-size: 16px;
  color: #333;
  font-weight: 300;
}

.container {
  padding: 80px 20px;
}





.box {
  height: 450px;
  margin: 10px 0px 20px 0px;
  background-color: #fff;
  padding: 10px;
  box-shadow: 0px 5px 0px -2px #DDD;
  border-radius: 10px;
}
.title{
  font-size: 24px;
  color: #666;
  font-weight: 450;
  
  border-bottom: 1px dashed #ccc;
}
.priver {
  /* background-color: #FFF; */
  /* border-radius: 10px 10px 0px 0px; */
  display: flex;
  /* padding: 10px; */
  /* margin-top: 10px; */
}


.info {
  font-size: 16px;
  color: #666;
  text-align: center;
  font-weight: 300;
}

.body {
  padding-top: 20px;
  font-size: 16px;
  color: #666;
  font-weight: 200;
}


.separator {
  border-top: 1px dashed #EEE;
  margin: 10px 0;
  /* margin: 0 10px; */
}

.emoji {
  width: 16px !important;
  height: 16px !important;
  background-color: transparent;
}

.bottom-btn {
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  left: 0;
  justify-content: space-around;
}
.btn-box {
  width: 50px;
  height: 50px;
  border-radius: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px 10px;
}
.btn-box > image {
  width: 25px;
  height: 25px;
}

.like-btn {
  background-image: linear-gradient(135deg, #77a9ff 0%, #4284f4 100%);
  box-shadow: 0px 5px 10px -5px #4284f4;
}

.del-btn {
  background-image: linear-gradient(135deg, #ff776d 0%, #f44336 100%);
  box-shadow: 0px 5px 10px -5px #f44336;
}


.fy-box {}
.fy-title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}
.fy-title > text {
  font-size: 12px;
  color: #666;
  font-weight: 200;
}